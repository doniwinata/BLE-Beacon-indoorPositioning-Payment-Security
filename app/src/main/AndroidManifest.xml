<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.idsl.blepayment">
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>
    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.idsl.blepayment.BeaconListActivity"
            android:label="Select Beacon"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.idsl.blepayment.MapPosActivity"
            android:label="Map of User"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.idsl.blepayment.SingleBeaconActivity"
            android:label="Single Beacon Activity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.idsl.blepayment.PaymentProcess"
            android:label="Payment Process"
            android:screenOrientation="portrait"/>


    </application>

</manifest>
